{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "start": {
      "cache": false
    },
    "start:dev": {
      "cache": false,
      "persistent": true
    },

    "test:watch": {
      "cache": false
    },

    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "env": ["NODE_ENV"]
    },

    "lint": {
      "outputs": []
    },

    "dev": {
      "cache": false,
      "persistent": true
    },

    "clean": {
      "cache": false
    }
  }
}
